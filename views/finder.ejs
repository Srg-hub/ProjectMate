<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Find Projects</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap');

    :root {
      --font-main: 'Inter', sans-serif;
      --color-bg: #0d1117;
      --color-surface: rgba(22,27,34,0.75);
      --color-border: rgba(240,246,252,0.1);
      --color-text: #e6edf3;
      --color-subtext: #8b949e;
      --color-accent: #58a6ff;
      --color-button: #1a8a5d;
      --color-button-hover: #146b48;
    }

    body {
      font-family: var(--font-main);
      background: radial-gradient(circle at top left, var(--color-bg), #010409);
      color: var(--color-text);
      min-height: 100vh;
      padding: 40px 20px;
      max-width: 1200px;
      margin: auto;
      overflow-x: hidden;
    }

    h2 {
      text-align: center;
      margin-bottom: 40px;
      font-weight: 700;
      color: var(--color-text);
    }

    /* Filter Form */
    .filter-form {
      background: var(--color-surface);
      border: 1px solid var(--color-border);
      border-radius: 16px;
      padding: 25px 30px;
      box-shadow: 0 0 30px rgba(56,139,253,0.05);
      backdrop-filter: blur(10px);
      margin-bottom: 50px;
    }

    .filter-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 15px;
    }

    .form-check-label {
      color: var(--color-text);
    }

    .btn-primary {
      background-color: var(--color-accent);
      border: none;
      font-weight: 600;
      transition: all 0.3s ease;
    }

    .btn-primary:hover {
      background-color: #4696f0;
      transform: translateY(-2px);
    }

    /* Project List */
    .project-list {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
      gap: 25px;
    }

    .project-card {
      background: var(--color-surface);
      border: 1px solid var(--color-border);
      border-radius: 16px;
      padding: 25px;
      box-shadow: 0 10px 30px rgba(56,139,253,0.05);
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      transition: transform 0.3s ease, box-shadow 0.3s ease, border-color 0.3s ease;
    }

    .project-card:hover {
      transform: translateY(-8px);
      box-shadow: 0 15px 40px rgba(56,139,253,0.15);
      border-color: rgba(88,166,255,0.25);
    }

    .project-card h5 {
      font-weight: 600;
      color: var(--color-text);
    }

    .project-card .domain {
      font-size: 0.9rem;
      color: var(--color-subtext);
      margin-bottom: 10px;
    }

    .project-card .desc {
      font-size: 1rem;
      color: var(--color-text);
      margin-bottom: 15px;
      line-height: 1.5;
    }

    .project-card .skills {
      font-weight: 500;
      margin-bottom: 15px;
      color: var(--color-accent);
    }

    .project-card .date {
      font-size: 0.85rem;
      color: var(--color-subtext);
      margin-top: auto;
      padding-top: 10px;
    }

    .btn-apply {
      background-color: var(--color-button);
      color: white;
      width: 100%;
      padding: 10px;
      font-weight: 600;
      border: none;
      border-radius: 8px;
      transition: background-color 0.3s ease;
    }

    .btn-apply:hover {
      background-color: var(--color-button-hover);
    }

    .btn-secondary[disabled] {
      opacity: 0.6;
      background-color: #2f363d;
      color: #9ca3af;
      border: none;
      font-weight: 600;
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <%- include('./partials/navbar') %>

  <h2>Find Projects by Domain</h2>

  <!-- Filter Form -->
  <form action="/project/find" method="GET" class="filter-form">
    <div class="filter-grid">
      <div class="form-check">
        <input class="form-check-input" type="checkbox" name="domains" value="Web Development" id="dom1" <%= selectedDomains.includes('Web Development') ? 'checked' : '' %>>
        <label class="form-check-label" for="dom1">Web Development</label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" name="domains" value="App Development" id="dom2" <%= selectedDomains.includes('App Development') ? 'checked' : '' %>>
        <label class="form-check-label" for="dom2">App Development</label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" name="domains" value="AI/ML" id="dom3" <%= selectedDomains.includes('AI/ML') ? 'checked' : '' %>>
        <label class="form-check-label" for="dom3">AI/ML</label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" name="domains" value="Blockchain" id="dom4" <%= selectedDomains.includes('Blockchain') ? 'checked' : '' %>>
        <label class="form-check-label" for="dom4">Blockchain</label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" name="domains" value="Cybersecurity" id="dom5" <%= selectedDomains.includes('Cybersecurity') ? 'checked' : '' %>>
        <label class="form-check-label" for="dom5">Cybersecurity</label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" name="domains" value="Game Development" id="dom6" <%= selectedDomains.includes('Game Development') ? 'checked' : '' %>>
        <label class="form-check-label" for="dom6">Game Development</label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" name="domains" value="Other" id="dom7" <%= selectedDomains.includes('Other') ? 'checked' : '' %>>
        <label class="form-check-label" for="dom7">Other</label>
      </div>
    </div>
    <button type="submit" class="btn btn-primary mt-4 px-4">Filter</button>
  </form>

  <!-- Project List -->
  <div class="project-list">
    <% projects.forEach(project => { %>
      <div class="project-card">
        <div>
          <h5><%= project.title %></h5>
          <div class="domain"><%= project.domain %></div>
          <div class="desc"><%= project.desc %></div>
          <div class="skills">
            Skills Required:
            <%= (project.skills_req && typeof project.skills_req.join === 'function')
                ? project.skills_req.join(', ')
                : (project.skills_req || 'None specified') %>
          </div>
        </div>

        <div>
          <div class="date">Created On: <%= new Date(project.createdOn).toLocaleDateString() %></div>

          <%
            const hasApplied =
              project.applicants &&
              project.applicants.some(applicant => applicant.user && applicant.user._id.toString() === currentUserId);
          %>

          <% if (hasApplied) { %>
            <button class="btn btn-secondary w-100 mt-3" disabled>Applied</button>
          <% } else { %>
            <form action="/project/apply/<%= project._id %>" method="POST" class="mt-3">
              <button type="submit" class="btn btn-apply">Apply</button>
            </form>
          <% } %>
        </div>
      </div>
    <% }) %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
